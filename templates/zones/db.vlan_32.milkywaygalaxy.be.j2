; VLAN {{ item.tag }} MANAGEMENT - {{ item.network }}/{{ item.subnetmask }}

$TTL {{ item.ttl }} 
$ORIGIN {{ item.domain }}.

@    IN    SOA    ns.{{ item.domain }}. jorik.{{ item.domain }}. (
{# Results in:		2019070803		; serial #}
            {{ ansible_date_time.year }}{{ ansible_date_time.month }}{{ ansible_date_time.day }}{{ ansible_date_time.minute }}    ; serial
            1D            ; refresh
            1H            ; retry
            1W            ; expire
            3H            ; minimum
)

; name servers - NS recors
	IN	NS	ns.{{ item.domain }}.

; name servers - A & CNAME records
ns					IN	A		10.32.0.11
dns2			    IN	CNAME	ns

; A records
gateway 			IN	A		10.32.0.1
starlight			IN	A		10.32.0.2
delta				IN	A		10.32.0.3
nebula				IN	A		10.32.0.4
andromeda			IN	A		10.32.0.5
ap-1				IN	A		10.32.0.6
ap-2				IN	A		10.32.0.7
pandora-1			IN	A		10.32.0.8
pandora-2			IN	A		10.32.0.9
pandora-IPMI		IN	A		10.32.0.10
omega       		IN	A		10.32.0.12
atlantis    		IN	A		10.32.0.13
synology			IN	A		10.32.0.14
mc-1    			IN	A		10.32.0.15
mc-2    			IN	A		10.32.0.16
k8s-1   			IN	A		10.32.0.24
k8s-2   			IN	A		10.32.0.25
k8s-3   			IN	A		10.32.0.26

; CNAME records
nas					IN	CNAME 	synology
backup				IN	CNAME 	synology
